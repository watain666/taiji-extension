{
    "manifest_version": 3,
    "name": "TâiJī Chhân 台字田",
    "version": "0.1.6",
    "description": "After selecting the word you want to look up, right-click and you can search with TâiJī Chhân!",
    "icons": {
        "16": "assets/icon-512.png",
        "48": "assets/icon-512.png",
        "128": "assets/icon-512.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "assets/icon-512.png",
        "default_popup": "popup.html"
    }
}